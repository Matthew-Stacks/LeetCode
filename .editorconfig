# EditorConfig is awesome: https://editorconfig.org
root = true

[*]
indent_style = space

trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4
quote_type = single

[*.js]
indent_size = 2

[*.yml]

[*.{markdown,md}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
trim_trailing_whitespace = false
